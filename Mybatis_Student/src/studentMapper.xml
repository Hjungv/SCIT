<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 학생정보 처리 SQL -->
<mapper namespace="student.dao.StudentMapper">

	<!-- 학생 정보 저장 -->
	<insert id="insert" parameterType="studentVo">
		/* insert */
		insert into
			student(
				id
				, name
				, kor
				, eng
				, mat
		)values(
				#{id}
				,#{name}
				,#{kor}
				,#{eng}
				,#{mat}
		)

	</insert>


	<!-- 전체 학생 목록 읽기 -->
	<select id="selectAll" resultType="studentVo">
		select
			id
			,name
			,kor
			,eng
			,mat
		from
			student
	</select>

	<!-- 학번으로 학생정보 삭제 -->
	<delete id="delete" parameterType="string">
		delete
		from
		student
		where
		id = #{id}

	</delete>

	<!-- 학생 정보 수정 -->

	<update id="update" parameterType="studentVo">
		update
		student
		set
		kor = #{kor}
		,eng = #{eng}
		,mat = #{mat}
		where id = #{id}
	</update>


	<!-- 이름으로 학생정보 검색 -->

	<select id="selectName" parameterType="string"
		resultType="studentVo">
		select
		id
		,name
		,kor
		,eng
		,mat
		from
		student
		where
		id = #{id}
	</select>


</mapper>
